{% extends 'simple.layout.html.twig' %}
{% block title %}Faça Login{% endblock %}

{% block body %}
<main id="content" role="main">
    <!-- Form -->
    <div class="d-flex align-items-center position-relative min-height-100vh--lg">

      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-8 col-lg-7 col-xl-6 offset-md-2 offset-lg-2 offset-xl-3 u-space-3 u-space-0--lg">

            <!-- Form -->
			{% include 'flash.twig' %}
	        {% set form = flash('form') %}
            <form class="js-validate mt-5" method="post">
              <!-- Title -->
              <div class="mb-7">
                <h2 class="h3 text-primary font-weight-normal mb-0">Bem Vindo de <span class="font-weight-bold">Volta</span></h2>
                <p>Faça Login para Gerenciar Seus Projetos.</p>
              </div>
              <!-- End Title -->

              <!-- Input -->
              <div class="js-form-message mb-4">
                <label class="h6 small d-block text-uppercase">Email address</label>

                <div class="js-focus-state input-group u-form">
                  <input type="text" class="form-control u-form__input" name="username" required autofocus placeholder="Usuário" aria-label="Usuário" value="{{ form.username }}"/>
                </div>
              </div>
              <!-- End Input -->

              <!-- Input -->
              <div class="js-form-message mb-4">
                <div class="d-flex justify-content-between align-items-center">
                  <label class="h6 small d-block text-uppercase">Senha</label>

                </div>

                <div class="js-focus-state input-group u-form">
                  <input type="password" class="form-control u-form__input" name="password" required placeholder="Senha" aria-label="Senha" value="{{ form.password }}"/>
                </div>
              </div>
              <!-- End Input -->

              <!-- Button -->
              <div class="row align-items-center mb-5">

                <div class="col-6 text-right">
                  <button type="submit" class="btn btn-primary u-btn-primary transition-3d-hover">Login</button>
                </div>
              </div>
              <!-- End Button -->
            </form>
            <!-- End Form -->
          </div>
        </div>
      </div>
    </div>
    <!-- End Form -->
  </main>

{% endblock %}
